[Unit]
Description=Prometheus exporter for {{ item }}

[Service]
Restart=always
User=prometheus
EnvironmentFile=/etc/default/prometheus-{{ item }}-exporter
ExecStart=/usr/local/bin/prometheus-{{ item }}-exporter $ARGS

[Install]
WantedBy=multi-user.target
