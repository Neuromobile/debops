[Unit]
Description=Ghostunnel {{ item.name }} client service

[Service]
Restart=always
User={{ ghostunnel__user }}
EnvironmentFile=/etc/default/ghostunnel-{{ item.name }}-client
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ghostunnel-{{ item.name }}-client
ExecStart=-/usr/local/bin/ghostunnel client $ARGS

[Install]
WantedBy=multi-user.target